<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    {{>navBar breadcrumb='Accounts'}}
    <!-- End Navbar -->

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-start mb-3">
                    <form action="" method="GET" class="d-flex justify-content-center" onsubmit="disableEmptyInputs(this)">
                        <div class="input-group input-group-static mb-3">
                            <label class="h6">Tìm kiếm tài khoản theo tên</label>
                            <input type="text" class="form-control" name="name">
                        </div>
                        <div class="me-2"><input type="submit" class="btn submit bg-gradient-success me-2" value="Tìm kiếm"></div>
                    </form>
                </div>
                <div class="card my-4">
                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <h6 class="text-white text-capitalize ps-3">Admins Table</h6>
                        </div>
                    </div>
                    <div class="card-body px-0 pb-2">
                        <div class="table-responsive p-0">
                            <table class="table align-items-center justify-content-center mb-0">
                                <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">USER_ID</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">TEN</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Ho</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder text-center opacity-7 ps-2">EMAIL</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each admins}}
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2">
                                                <div>
                                                    <img src="/images/small-logos/logo-asana.svg" class="avatar avatar-sm rounded-circle me-2" alt="spotify">
                                                </div>
                                                <div class="my-auto">
                                                    <h6 class="mb-0 text-sm">{{USER_ID}}</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-sm font-weight-bold mb-0">{{TEN}}</p>
                                        </td>
                                        <td>
                                            <span class="text-xs font-weight-bold">{{HO}}</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <div class="d-flex align-items-center justify-content-center">
                                                <span class="me-2 text-xs font-weight-bold">{{EMAIL}}</span>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <button class="btn btn-link text-secondary mb-0">
                                                <i class="fa fa-ellipsis-v text-xs"></i>
                                            </button>
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--Product page navigation-->
                {{>pagination paginateInfo}}
                <!--Product page navigation end-->
            </div>
        </div>
        {{> footer}}
    </div>
</main>
{{> settings}}
